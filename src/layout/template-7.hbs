<html>

  <head>
    <title>
      {{page.title}}
    </title>
    <meta charset='utf-8' />

    <link
      rel='preconnect'
      href='https://fonts.googleapis.com'
    />
    <link
      rel='preconnect'
      href='https://fonts.gstatic.com'
      crossorigin
    />
